<p><%= link_to "Plantas", api_plants_path%></p>

<h1><%= @plant[:name] %></h1>

<h2>Biología</h2>

<p>Familia: <%= @plant.family %></p>
<p>Luz: <%= @plant.light %></p>
<p>Humedad: <%= @plant.humidity %></p>
<p>Profundidad de raíz: <%= @plant.root_depth %></p>
<p>Diámetro de raíz: <%= @plant.root_diameter %> metros</p>
<p>Tª máxima: <%= @plant.maximum_temperature %> ºC</p>
<p>Tª mínina: <%= @plant.minimum_temperature %> ºC</p>
<p>Tª germinación: <%= @plant.germination_temperature %> ºC</p>

<h2>Cuidados</h2>
<table>
  <thead>
    <tr>
      <th>Tarea</th>
      <th>Meses</th>
      <th>Luna</th>
    </tr>
  </thead>
  <body>
    <% if @plant.crops.present? %>
      <% @plant.crops.each do |data| %>
        <tr>
          <td><%= data[:name] %></td>
          <td><%= data[:month] %></td>
          <td><%= data[:moon] %></td>
        </tr>
      <% end %>
    <% end %>
  </body>
</table>

